											<li class="pl-2">Status :
												{{ wardrobe_item.status.value }}</li>
											<li class="pl-2">Season :
												{{ wardrobe_item.season.value }}</li>
										</ul>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>

				<section aria-labelledby="related-heading" class="mt-10 border-t border-gray-200 px-4 py-16 sm:px-0">
