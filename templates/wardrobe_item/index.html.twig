{% extends 'base.html.twig' %}

{% block title %}WardrobeItem index
{% endblock %}

{% block body %}
	<div class="bg-gray-50">

		<div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:max-w-7xl lg:px-8">
			<div class="py-12">
				<h1 class="text-4xl font-bold tracking-tight text-gray-900">Vêtements</h1>
			</div>
		</div>
	</div>


	<div class="flex justify-center mt-8">
		<a class="p-4 shadow-lg rounded-2xl border-2 border-slate-100" href="{{ path('app_wardrobe_item_new') }}">Ajouter un vêtement
		</a>
	</div>
	<div class="bg-white">
		<div class="mx-auto max-w-2xl px-4 pb-16 pt-8 sm:px-6 sm:pb-24 lg:max-w-7xl lg:pb-8">
			<h2 class="sr-only">WardrobeItem</h2>
			<div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
				{% for wardrobe_item in wardrobe_items %}
					<a href="{{ path('app_wardrobe_item_show', {'id': wardrobe_item.id}) }}" class="group relative">
						<img src="{{ asset('images/wardrobeItem/' ~ wardrobe_item.image) }}" alt="Tall slender porcelain bottle with natural clay textured body and cork stopper." class="aspect-square w-full rounded-lg bg-gray-200 object-cover group-hover:opacity-75 xl:aspect-7/8">
						<span class="absolute top-2 right-2 bg-white/30 text-black text-xs font-bold px-3 py-1 rounded-full shadow-md backdrop-blur-sm">
							{{ wardrobe_item.size }}
						</span>

						<div class="flex justify-between">
							<h3 class="mt-4 text-sm text-gray-700">{{ wardrobe_item.brand }}</h3>
							<h3 class="mt-4 text-sm text-gray-700">{{ wardrobe_item.season.value }}</h3>
						</div>
						<p class="mt-1 text-lg font-medium text-gray-900">{{ wardrobe_item.name }}</p>
					</a>
				{% else %}
					<tr>
						<td colspan="12">no records found</td>
					</tr>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
