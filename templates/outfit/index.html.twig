{% extends 'base.html.twig' %}

{% block title %}Mes tenues{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Mes tenues</h1>
            <a href="{{ path('app_outfit_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Créer une nouvelle tenue
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% if outfits|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for outfit in outfits %}
                    <div class="border rounded-lg overflow-hidden shadow-lg">
                        <div class="h-48 overflow-hidden bg-gray-200">
                            {% if outfit.image %}
                                <img src="{{ vich_uploader_asset(outfit, 'imageFile') }}" alt="{{ outfit.name }}" class="w-full h-full object-cover">
                            {% else %}
                                <div class="flex items-center justify-center h-full">
                                    <span class="text-gray-400">Pas d'image</span>
                                </div>
                            {% endif %}
                        </div>
                        <div class="p-4">
                            <h2 class="text-xl font-semibold mb-2">{{ outfit.name }}</h2>
                            <p class="text-gray-600 mb-2">{{ outfit.occasion }}</p>
                            <p class="text-gray-500 mb-4">Saison: {{ outfit.season.value }}</p>
                            <p class="mb-2"><span class="font-semibold">Vêtements:</span> {{ outfit.outfitItems|length }}</p>

                            <div class="flex justify-between mt-4">
                                <a href="{{ path('app_outfit_show', {'id': outfit.id}) }}" class="text-blue-500 hover:text-blue-700">
                                    Voir
                                </a>
                                <a href="{{ path('app_outfit_edit', {'id': outfit.id}) }}" class="text-green-500 hover:text-green-700">
                                    Modifier
                                </a>
                                <button type="button" class="delete-trigger text-red-500 hover:text-red-700"
                                        data-outfit-id="{{ outfit.id }}"
                                        data-outfit-name="{{ outfit.name }}"
                                        data-csrf-token="{{ csrf_token('delete' ~ outfit.id) }}">
                                    Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="bg-gray-100 p-8 rounded-lg text-center">
                <p class="text-gray-600 mb-4">Vous n'avez pas encore créé de tenues.</p>
                <a href="{{ path('app_outfit_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Créer ma première tenue
                </a>
            </div>
        {% endif %}
    </div>

    <div id="deleteModal" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded-lg shadow-xl max-w-md w-full">
            <h3 class="text-xl font-bold mb-4">Confirmer la suppression</h3>
            <p id="deleteMessage" class="mb-6"></p>
            <div class="flex justify-end space-x-3">
                <button id="cancelDelete" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">
                    Annuler
                </button>
                <form id="deleteForm" method="post" action="" data-base-url="{{ path('app_outfit_delete', {'id': 'OUTFIT_ID'}) }}">
                <input type="hidden" name="_token" id="csrfToken" value="">
                    <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('outfit-delete-modal') }}
{% endblock %}
