{% extends 'base.html.twig' %}

{% block title %}Outfit{% endblock %}

{% block body %}
    <h1>Outfit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ outfit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ outfit.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ outfit.description }}</td>
            </tr>
            <tr>
                <th>Occasion</th>
                <td>{{ outfit.occasion }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ outfit.season.value }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ outfit.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ outfit.createdAt ? outfit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ outfit.updatedAt ? outfit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ outfit.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_outfit_index') }}">back to list</a>

    <a href="{{ path('app_outfit_edit', {'id': outfit.id}) }}">edit</a>

    {{ include('outfit/_delete_form.html.twig') }}
{% endblock %}
