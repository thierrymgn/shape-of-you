{% extends 'base.html.twig' %}

{% block title %}SocialPost index{% endblock %}

{% block body %}
    <h1 class="text-center text-5xl my-10">Shape Of You</h1>

    <div class="text-center justify-items-center mb-5">
        <h2 class="text-3xl mb-5">Découvrez les derniers posts publiés</h2>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 animate-bounce">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
        </svg>          
    </div>

    {# <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Image</th>
                <th>Likes_count</th>
                <th>Comments_count</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody> #}
        <div>
            {% for social_post in social_posts %}
            <div class="px-16">
                <h2 class="text-sm font-semibold text-gray-900">
                {% if social_post.author %}
                    {# <a href="{{ path('app_user_show', {'id': social_post.author.id}) }}"> #}
                        {{ social_post.author.firstName }} {{ social_post.author.lastName }}
                    {# </a>     #}
                {% else %}
                    Unknown
                {% endif %}
                </h2>
                <a href="{{ path('app_social_post_show', {'id': social_post.id}) }}">
                    <p class="text-lg font-bold text-gray-900 first-letter:uppercase">{{ social_post.title }}</p>
                    <p class="text-base width-auto font-medium text-black flex-shrink first-letter:uppercase">
                    {{social_post.content}}
                    </p>
                </a>
                {% if social_post.image %}
                <div class="md:flex-shrink pr-6 pt-3">
                    <img class="rounded-lg w-full object-cover" src="{{ asset('uploads/images/social_post/' ~ social_post.image)}}" alt="{{ social_post.title }} image" onload="adjustOrientation(this)">
                </div>
                {% endif %}
                <div class="flex">
                    <div class="w-full">
                        <div class="flex items-center">
                            <div class="flex-1 text-center">
                                <a href="{{ path('app_social_post_show', {'id': social_post.id}) }}" class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full hover:text-indigo-800">
                                    <svg class="text-center h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
                                    <span>{{ social_post.commentsCount }}</span>
                                </a>
                            </div>

                            <div class="flex-1 text-center">
                                <a href="#" class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full hover:text-indigo-800">
                                    <svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
                                    <span>{{ social_post.likesCount }}</span>
                                </a>
                            </div>

                            <div class="flex-1 text-center">
                                <a href="#" class="w-12 mt-1 group flex items-center text-gray-500 px-3 py-2 text-base leading-6 font-medium rounded-full hover:text-indigo-800">
                                    <svg class="text-center h-7 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-4">
                {# <tr>
                    <img src="{{ asset('uploads/images/social_post/' ~ social_post.image) }}" alt="{{ social_post.title }}">
                    <td>{{ social_post.id }}</td>
                    <td>{{ social_post.title }}</td>
                    <td>{{ social_post.content }}</td>
                    <td>{{ social_post.image }}</td>
                    <td>{{ social_post.likesCount }}</td>
                    <td>{{ social_post.commentsCount }}</td>
                    <td>{{ social_post.createdAt ? social_post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ social_post.updatedAt ? social_post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_social_post_show', {'id': social_post.id}) }}">show</a>
                        <a href="{{ path('app_social_post_edit', {'id': social_post.id}) }}">edit</a>
                    </td>
                </tr> #}
            {% else %}
                <div>
                    <p>Feed vide</p>
                </div>
            {% endfor %}
        </div>

    <div class="sticky bottom-4 text-end">
        <a class="bg-indigo-600 text-white px-4 py-3 mr-2 rounded-full font-bold text-lg" href="{{ path('app_social_post_new') }}">+</a>
    </div>
{% endblock %}
