{% extends 'base.html.twig' %}

{% block title %}Liste des Outfits{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h1 class="text-2xl font-bold mb-6 text-center">Liste des Outfits</h1>
    {% if outfits is not empty %}
        <div class="px-4 divide-y divide-gray-200">
            {% for outfit in outfits %}
                <div class="py-4 justify-between flex">
                    <div>
                        <h2 class="text-lg font-medium text-gray-900">{{ outfit.name }}</h2>
                        <p class="text-sm line-clamp-2 text-gray-600">{{ outfit.description }}</p>
                    </div>
                    <div class="text-right">
                        <a href="{{ path('app_outfit_show', {'id': outfit.id}) }}" class="p-3 bg-blue-500 text-white font-bold rounded-lg hover:underline">
                            Voir les détails
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun outfit trouvé.</p>
    {% endif %}
</div>
{% endblock %}