{% extends 'base.html.twig' %}

{% block title %}Éditer mon profil{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:px-6 bg-gray-50">
                <h1 class="text-2xl font-semibold text-gray-900">Éditer mon profil</h1>
                <p class="mt-1 text-sm text-gray-500">Mettez à jour vos informations personnelles</p>
            </div>

            <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8">
                    <div>
                        <div class="mb-4">
                            {{ form_label(form.height, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.height, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                            {{ form_errors(form.height, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>

                    <div>
                        <div class="mb-4">
                            {{ form_label(form.weight, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.weight, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                            {{ form_errors(form.weight, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>
                </div>

                <div>
                    <div class="mb-4">
                        {{ form_label(form.bodyType, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.bodyType, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                        {{ form_errors(form.bodyType, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                </div>

                <div class="mt-8">
                    <h2 class="text-lg font-medium text-gray-900">Préférences de style</h2>
                    <div class="mt-4">
                        <div id="stylePreferences" class="collection-holder"
                             data-prototype="{{ form_widget(form.stylePreferences.vars.prototype)|e('html_attr') }}">
                            {% for styleField in form.stylePreferences %}
                                <div class="collection-item flex items-center space-x-2 mb-2">
                                    {{ form_widget(styleField, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="mt-8">
                    <h2 class="text-lg font-medium text-gray-900">Préférences de couleur</h2>
                    <div class="mt-4">
                        <div id="colorPreferences" class="collection-holder"
                             data-prototype="{{ form_widget(form.colorPreferences.vars.prototype)|e('html_attr') }}">
                            {% for colorField in form.colorPreferences %}
                                <div class="collection-item flex items-center space-x-2 mb-2">
                                    {{ form_widget(colorField, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="mt-8">
                    <h2 class="text-lg font-medium text-gray-900">Tailles habituelles</h2>
                    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-3">
                        <div>
                            {{ form_label(form.topSize, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.topSize, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                            {{ form_errors(form.topSize, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.bottomSize, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.bottomSize, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                            {{ form_errors(form.bottomSize, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.shoeSize, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.shoeSize, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                            {{ form_errors(form.shoeSize, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>
                </div>

                <div class="flex justify-end">
                    <a href="{{ path('app_settings_show') }}" class="mr-4 px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Annuler
                    </a>
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Enregistrer
                    </button>
                </div>
                {{ form_end(form) }}
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('profile-collections') }}
{% endblock %}
